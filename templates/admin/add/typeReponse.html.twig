{% extends 'base.html.twig' %}

{% block title %}Admin - Ajout d'une question{% endblock %}


{% block main %}
    <div class="col-lg-6">
        {{ form_start(typeReponseForm) }}
            {{ form_row(typeReponseForm.intitule) }}
            {{ form_row(typeReponseForm.choix) }}
            {{ form_row(typeReponseForm.multiple) }}
            <div class="row">
                <button type="submit" class="btn btn-primary"><i class="fas fa-arrow-right"></i> Suivant</button>
                <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary" role="button" aria-pressed="true"><i class="fas fa-arrow-left"></i> Retour</a>
            </div>
        {{ form_end(typeReponseForm) }}
    </div>
    
{% endblock %}